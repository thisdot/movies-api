{
	"compilerOptions": {
		"module": "CommonJS",
		"moduleResolution": "node",
		"outDir": "dist",
		"lib": ["esnext"],
		"preserveConstEnums": true,
		"strict": true,
		"target": "ES2020",
		"sourceMap": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@handlers/*": ["src/handlers/*"],
			"@models/*": ["src/models/*"],
			"@schema/*": ["src/schema/*"],
			"@customTypes/*": ["src/types/*"],
			"@utils/*": ["src/utils/*"],
			"@generated/*": ["src/generated/*"]
		}
	},
	"files": [],
	"include": [],
	"references": [
		{
			"path": "./tsconfig.spec.json"
		}
	],
	"exclude": ["node_modules"]
}
